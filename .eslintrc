{
   "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true,
			"impliedStrict": true
		}
	},
  "ecmaFeatures": {
    "impliedStrict": true
  },
  "env": {
    "browser": true,
    "jquery": true,
    "node": true,
    "mocha": true,
    "es6": true
    // "protractor": true,
    // "jasmine": true
  },
  "globals": {
    "angular": false,
    "chai": false
  },
  "rules": {
    "semi": [2, "always"],
    "strict": [2, "global"],
    "no-undefined": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "indent": [2, 2],
    "quotes": [1, "single"],
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "FunctionExpression": true
      }
    }],
    "space-infix-ops": [2, {"int32Hint": false}],
    "no-mixed-spaces-and-tabs": 1,
    "new-cap": 1,
    "no-redeclare": [2, { "builtinGlobals": true }]
  }
}
